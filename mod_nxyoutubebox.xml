	<authorEmail>marco.rensch@area59.ch</authorEmail>
	<authorUrl>www.nx-designs.ch</authorUrl>
	<version>1.0.5.0</version>
	<description>MOD_NX_YTBOX_DESCRIPTION</description>
	
	<files>
		<filename module="mod_nxyoutubebox">mod_nxyoutubebox.php</filename>
		<filename>mod_nxyoutubebox.xml</filename>
		<filename>helper.php</filename>
		<filename>changelog.md</filename>
		<filename>license.txt</filename>
		<filename>index.html</filename>
        <folder>models</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
        <folder>images</folder>
	</files>
	
	<languages>
	</languages>
    <config>
        <fields name="params" >
            <fieldset name="basic" class="form-validate" addfieldpath="/modules/mod_nxyoutubebox/models/fields">
                <field type="spacer" name="basicspacer" label="&lt;strong&gt;Basic Settings&lt;/strong&gt; &lt;hr/&gt;" />
                <field name="sourceType" type="list" default="single" label="MOD_NX_YTBOX_SRCTYPE_LABEL" description="MOD_NX_YTBOX_SRCTYPE_DESC">
                    <option value="0">MOD_NX_YTBOX_SRCTYPE_SINGLE</option>
                    <option value="1">MOD_NX_YTBOX_SRCTYPE_PLAYLIST</option>           
                </field>
                <field name="videoID" type="text" showon="sourceType:0" default="" label="MOD_NX_YTBOX_VID" description="MOD_NX_YTBOX_VID_DESC" size="11" />
                <field name="playlistID" type="text" showon="sourceType:1" default="" label="MOD_NX_YTBOX_PID" description="MOD_NX_YTBOX_PID_DESC" size="11" />
                <field name="userID" type="text" showon="sourceType:2" default="" label="MOD_NX_YTBOX_UID" description="MOD_NX_YTBOX_UID_DESC" size="11" />
                <field name="mute" type="radio" default="0" label="MOD_NX_YTBOX_MUTE_LABEL" description="MOD_NX_YTBOX_MUTE_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="volume" type="nxVolume" default="50" label="MOD_NX_YTBOX_VOLUME_LABEL" description="MOD_NX_YTBOX_VOLUME_DESC" first="0" last="100" step="1" />
                <field name="start" showon="sourceType:0" type="text" default="0" label="MOD_NX_YTBOX_START_LABEL" description="MOD_NX_YTBOX_START_DESC" filter="integer" class="validate-numeric" />
                <field name="disablekb" type="radio" default="0" label="MOD_NX_YTBOX_DISABLEKB_LABEL" description="MOD_NX_YTBOX_DISABLEKB_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                
                <field type="spacer" name="endbasic" label="" hr="false" />
                
                
		<!-- Advanced Settings -->
                <field type="spacer" name="advancedspacer" label="&lt;strong&gt;Advanced Settings&lt;/strong&gt; &lt;hr/&gt;" />
                
                <field name="autoplay" type="radio" default="0" label="MOD_NX_YTBOX_AUTOPLAY_LABEL" description="MOD_NX_YTBOX_AUTOPLAY_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="loop" type="radio" default="0" label="MOD_NX_YTBOX_LOOP_LABEL" description="MOD_NX_YTBOX_LOOP_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="allowfullscreen" type="radio" default="0" label="MOD_NX_YTBOX_FS_LABEL" description="MOD_NX_YTBOX_FS_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="controls" type="radio" default="1" label="MOD_NX_YTBOX_CONTROLS_LABEL" description="MOD_NX_YTBOX_CONTROLS_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>          
                </field>
                <field name="related" type="radio" default="1" label="MOD_NX_YTBOX_RELATED_LABEL" description="MOD_NX_YTBOX_RELATED_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>            
                </field>
                <field name="branding" type="radio" default="1" label="MOD_NX_YTBOX_BRANDING_LABEL" description="MOD_NX_YTBOX_BRANDING_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="annotations" type="radio" default="0" label="MOD_NX_YTBOX_ANNO_LABEL" description="MOD_NX_YTBOX_ANNO_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="showinfo" type="radio" default="1" label="MOD_NX_YTBOX_SHOWINFO_LABEL" description="MOD_NX_YTBOX_SHOWINFO_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="playsinline" type="radio" default="1" label="MOD_NX_YTBOX_PLAYINLINE_LABEL" description="MOD_NX_YTBOX_PLAYINLINE_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="rotate2d" type="nxRotate" default="90" label="MOD_NX_YTBOX_ROT_LABEL" description="MOD_NX_YTBOX_ROT_DESC" min="0" max="180" step="1" />
    
                
                <field type="spacer" name="endadvanced" label="" hr="false" />
                
            </fieldset>
            <fieldset name="Blocklayer" class="form-validate" addfieldpath="/modules/mod_nxyoutubebox/models/fields">
                <field type="spacer" name="blocklayerspacer" label="&lt;strong&gt;Blocklayer Settings&lt;/strong&gt; &lt;hr/&gt;" />
                
                <field name="blocklayer" type="radio" default="0" label="MOD_NX_YTBOX_BLOCKLAYER_LABEL" description="MOD_NX_YTBOX_BLOCKLAYER_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="blocklayercolor" showon="blocklayer:1" type="nxColor" format="rgba" default="rgba(0,0,0, 0.0)" label="MOD_NX_YTBOX_BLOCKLAYERCOLOR_LABEL" description="MOD_NX_YTBOX_BLOCKLAYERCOLOR_DESC" />
                <field name="blocklayershadowenable" showon="blocklayer:1" type="radio" default="0" label="MOD_NX_YTBOX_BLOCKLAYERSHADOW_LABEL" description="MOD_NX_YTBOX_BLOCKLAYERSHADOW_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                
                <field name="blocklayershadowwidthh" showon="blocklayershadowenable:1[AND]blocklayer:1" type="text" default="0" label="MOD_NX_YTBOX_SHADOWWH_LABEL" description="MOD_NX_YTBOX_SHADOWWH_DESC" filter="integer" class="validate-numeric" />
                <field name="blocklayershadowwidthv" showon="blocklayershadowenable:1[AND]blocklayer:1" type="text" default="0" label="MOD_NX_YTBOX_SHADOWWV_LABEL" description="MOD_NX_YTBOX_SHADOWWV_DESC" filter="integer" class="validate-numeric" />
                <field name="blocklayershadowwidthb" showon="blocklayershadowenable:1[AND]blocklayer:1" type="text" default="12" label="MOD_NX_YTBOX_SHADOWWB_LABEL" description="MOD_NX_YTBOX_SHADOWWB_DESC" filter="integer" class="validate-numeric" />
                <field name="blocklayershadowwidths" showon="blocklayershadowenable:1[AND]blocklayer:1" type="text" default="8" label="MOD_NX_YTBOX_SHADOWWS_LABEL" description="MOD_NX_YTBOX_SHADOWWS_DESC" filter="integer" class="validate-numeric" />
                
                <field name="blocklayershadowcolor" showon="blocklayershadowenable:1[AND]blocklayer:1" type="nxColor" format="rgba" default="rgba(0,0,0, 0.75)" label="MOD_NX_YTBOX_BLOCKLAYERSHADOWC_LABEL" description="MOD_NX_YTBOX_BLOCKLAYERSHADOWC_DESC" />
                
                <field type="spacer" name="endblocklayer" label="" hr="false" />    
            </fieldset>
            <fieldset name="Headermode" class="form-validate" addfieldpath="/modules/mod_nxyoutubebox/models/fields">
                <field type="spacer" name="headermodespacer" label="&lt;strong&gt;Headermode Settings&lt;/strong&gt; &lt;hr/&gt;" />
                <field name="headermode" type="radio" default="0" label="MOD_NX_YTBOX_HEADERMODE_LABEL" description="MOD_NX_YTBOX_HEADERMODE_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
                <field name="maxheightvalue" showon="headermode:1" type="text" default="50" label="MOD_NX_YTBOX_MHV_LABEL" description="MOD_NX_YTBOX_MHV_DESC" filter="integer" class="validate-numeric" />
                <field name="movevideo" showon="headermode:1" type="text" default="-40" label="MOD_NX_YTBOX_MUP_LABEL" description="MOD_NX_YTBOX_MUP_DESC" filter="integer" class="validate-numeric" />
                <field type="spacer" name="endheadermode" label="" hr="false" />
            </fieldset>
            <fieldset name="BorderandShadow" class="form-validate" addfieldpath="/modules/mod_nxyoutubebox/models/fields">
                <field type="spacer" name="borderspacer" label="&lt;strong&gt;Border &amp; Shadow Settings&lt;/strong&gt; &lt;hr/&gt;" />
                
		<!-- General Border Settings -->
                <field name="useborder" type="radio" default="0" label="MOD_NX_YTBOX_USEBORDER_LABEL" description="MOD_NX_YTBOX_USEBORDER_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="borderwidth" showon="useborder:1" type="text" default="0" label="MOD_NX_YTBOX_BOR_LABEL" description="MOD_NX_YTBOX_BOR_DESC" filter="integer" class="validate-numeric" />
                <field name="bordercolor" showon="useborder:1" type="nxColor" format="rgba" default="rgba(255,255,255, 1)" label="MOD_NX_YTBOX_BORC_LABEL" description="MOD_NX_YTBOX_BORC_DESC" />
                <field name="borderradius" showon="useborder:1" type="text" default="0px 0px 0px 0px" label="MOD_NX_YTBOX_BORR_LABEL" description="MOD_NX_YTBOX_BORR_DESC" filter="" class="" />
                
		<!-- Bottom Border Settings -->
              	<field name="useborderbottom" showon="useborder:1" type="radio" default="0" label="MOD_NX_YTBOX_USEBORDERB_LABEL" description="MOD_NX_YTBOX_USEBORDERB_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="borderbottomwidth" showon="useborder:1[AND]useborderbottom:1" type="text" default="0" label="MOD_NX_YTBOX_BORB_LABEL" description="MOD_NX_YTBOX_BORB_DESC" filter="integer" class="validate-numeric" />
                <field name="bottombordercolor" showon="useborder:1[AND]useborderbottom:1" type="nxColor" format="rgba" default="rgba(255,255,255, 1)" label="MOD_NX_YTBOX_BORBC_LABEL" description="MOD_NX_YTBOX_BORBC_DESC" />
                
		<!-- Outer Shadow Settings -->
                <field name="useshadow" type="radio" default="0" label="MOD_NX_YTBOX_USESHADOW_LABEL" description="MOD_NX_YTBOX_USESHADOW_DESC" class="btn-group">
                    <option value="0">JNO</option> 
                    <option value="1">JYES</option>
                </field>
                <field name="shadowcolor" showon="useshadow:1" type="nxColor" format="rgba" default="rgba(0,0,0, 0.75)" label="MOD_NX_YTBOX_SHADOWC_LABEL" description="MOD_NX_YTBOX_SHADOWC_DESC" />
                <field name="shadowwidthh" showon="useshadow:1" type="text" default="0" label="MOD_NX_YTBOX_SHADOWWH_LABEL" description="MOD_NX_YTBOX_SHADOWWH_DESC" filter="integer" class="validate-numeric" />
                <field name="shadowwidthv" showon="useshadow:1" type="text" default="0" label="MOD_NX_YTBOX_SHADOWWV_LABEL" description="MOD_NX_YTBOX_SHADOWWV_DESC" filter="integer" class="validate-numeric" />
                <field name="shadowwidthb" showon="useshadow:1" type="text" default="12" label="MOD_NX_YTBOX_SHADOWWB_LABEL" description="MOD_NX_YTBOX_SHADOWWB_DESC" filter="integer" class="validate-numeric" />
                <field name="shadowwidths" showon="useshadow:1" type="text" default="0" label="MOD_NX_YTBOX_SHADOWWS_LABEL" description="MOD_NX_YTBOX_SHADOWWS_DESC" filter="integer" class="validate-numeric" />  
            </fieldset>
            <fieldset name="advanced">
	          <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
            </fieldset>
        </fields>
    </config>
    <updateservers>
	    <server type="extension" name="nx-youtubeBox" priority="1">http://update.nx-designs.ch/updates/nx-youtubeBox_update.xml</server>
    </updateservers>
</extension>
